---
import { render, type CollectionEntry } from 'astro:content'

interface Props {
  entry: CollectionEntry<'jobs'>
}

const { entry } = Astro.props
const { Content } = await render(entry)
---

<li class="flex not-prose max-md:flex-col items-baseline">
  <span class="md:min-w-40 opacity-75 text-sm"
    >{entry.data.from} - {entry.data.to}</span
  >
  <div class="flex flex-col gap-3">
    <div class="flex flex-col">
      <h3 class="text-base-content font-semibold text-lg">
        {entry.data.title}
      </h3>
      <a
        href={entry.data.url}
        class="link link-hover text-base-content font-semibold text-sm"
        >{entry.data.company}</a
      >
      <span class="text-sm opacity-75">{entry.data.contract}</span>
    </div>
  </div>
</li>
<div>
  <Content />
</div>
